      </div>
      <script type="text/javascript" charset="utf-8" src='<%= asset_path('s.player.js') %>'></script>
      </div>
<% when :youku %>
    <embed src="http://player.youku.com/player.php/sid/XMTczNDg4NzY0/v.swf" allowFullScreen="true" quality="high" width="480" height="400" align="middle" allowScriptAccess="always" type="application/x-shockwave-flash"></embed>
<% end %>
        </div>
    </div>

    <div class="extras">
      <%= render :partial => 'presenter', :locals => {user:@courseware.uploader} %>

      <ul class="delimited">
          <li class="like">
        <% unless current_user and @courseware.user_id==current_user.id%>
          <% if thank_courseware_ed?(@courseware) %>
            <a href="javascript:void(0)" class="unlike purple" data-method="post" data-remote="true" rel="nofollow" id="weizuozhefasongganxie">已喜欢</a>
          <% else %>
            <a href="javascript:void(0)" class="like grey" data-method="post" data-remote="true" rel="nofollow" id="weizuozhefasongganxie">我喜欢</a>
          <% end %>
        <% else %>
            <a href="javascript:void(0)" class="like grey">收到的喜欢</a>
        <% end %>
            <a href="#fans" class="likes"><span id="weizuozhefasongganxie2"><%= @courseware.thanked_count %></span> 喜欢</a>
          </li>
        <li class="category">领域 <a href="/topics/<%= @courseware.topic_id %>"><%= @courseware.topic %></a></li>
        <li class="dianjiliang">点击量 <a href="#watch-view-count"><%= number_with_delimiter @courseware.views_count %> 次</a></li>
              </ul>
      <h1><%=image_tag('share.png',alt:'下载此课件')%></h1>
      <ul class="delimited share">
        <li class="download"><%=Courseware::SORTSTR[@courseware.sort]%>(<%=@courseware.down_pdf_size ? number_to_human_size(@courseware.down_pdf_size*1000,:precision=>1) : '大小未知' %>)<a target="_blank" href="<%= download_courseware_path(@courseware)%>">立即下载</a></li>
      </ul>
  <% unless @courseware.user_id==@courseware.uploader_id %>
      <h1><%=image_tag('zuozhe.png',alt:'课件原作者',style:'margin-top:26px;margin-bottom:4px')%></h1>
      <% style='margin-top:10px' %>
      <%= render :partial => 'presenter', :locals => {user:@courseware.user, :style=>style} %>
  <% end %>
      <h6><%=image_tag('peixun2.png',alt:'相关线下培训',style:'margin-top:28px')%></h6>
<div class="ad">
  <p>
    <a href="http://www.universaltraining.cn/peixun/programming/2010-01/3.html" target="_blank">
      <img alt="Ruby认证程序员课程（Ruby Association Certified Ruby Programmer Silver）" src="<%=asset_path 'ad1.png'%>">
