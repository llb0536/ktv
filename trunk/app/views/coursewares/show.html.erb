<% content_for :butt2 do %>
KTV.data = {
  courseware_id: '<%=@courseware.id%>'
}
<% end %>
<div class="__sdk"><%# todo: 710px ..ratio %>
<section id="presentation" class="feature">
  <div class="wrapper">

    <% if @courseware.thin? %>
    <div class="extras" style="float:right;margin-left:12px">
      <%= render :partial => 'presenter', :locals => {user:@courseware.uploader} %>
    </div>
    <% end  %>
    
    <h1>
      <%if @cws%>第<%=@courseware.courseware_series_no%>集. <%end%>
      <%= @courseware.title %>
      <%if @cws%>
        <span style="font-size:16px;text-align:center">
        (
          <%= link_to('上一集',@cws.coursewares.where('courseware_series_no = ?', @courseware.courseware_series_no - 1).first.path)+' |' if @courseware.courseware_series_no - 1 > 0 %>
          <%= link_to('下一集',@cws.coursewares.where('courseware_series_no = ?', @courseware.courseware_series_no + 1).first.path)+' |' if @courseware.courseware_series_no + 1 <= @cws.coursewares_count %>
          <%=link_to "共#{@cws.coursewares_count}集",'#cws_list'%>
        )
        </span>
      <%end%>
      <% if owner? @courseware %>
        <a id="edit_presentation" class="grey" style="display:inline-block;" href="<%= edit_courseware_path(@courseware) %>">编辑课件</a>
      <% end %>
    </h1>

    <% if @courseware.thin? %>

    <div class="main" style="width:100%;margin-top:12px;">
        <div class="slide_frame" id="slides_container">
              <script async="async" class="speakerdeck-embed" data-course-slug="<%=@courseware.topic_id%>" data-courseware-slug="<%=@courseware.id%>" data-ratio="<%= @courseware.wh_ratio %>" src="<%=asset_path 'ktv/embed.js'%>" type="text/javascript"></script>
        </div>
    </div>

    <div class="extras" style="float:right;margin-right:0px">
      <ul class="delimited share" style="margin-bottom:0;border-top:none">
        <li class="download" style="border-top:none"><%=Courseware::SORTSTR[@courseware.sort]%>(<%=@courseware.down_pdf_size ? number_to_human_size(@courseware.down_pdf_size*1000,:precision=>1) : '大小未知' %>)<a target="_blank" href="<%= download_courseware_path(@courseware)%>">立即下载</a></li>
      </ul>
    </div>
    

    <div class="extras" style="float:right;margin-right:40px">
      <ul class="delimited share" style="margin-bottom:0;border-top:none">
        <li class="dianjiliang" style="border-top:none">点击量 <a href="#watch-view-count"><%= number_with_delimiter @courseware.views_count %> 次</a></li>
      </ul>
    </div>
    
    
    <div class="extras" style="float:right;margin-right:18px;margin-right:40px">
      <ul class="delimited" style="margin-bottom:0;border-top:none">
        <li class="like" style="border-top:none">
        <% unless current_user and @courseware.user_id==current_user.id%>
          <% if thank_courseware_ed?(@courseware) %>
            <a href="javascript:void(0)" class="unlike purple" data-method="post" data-remote="true" rel="nofollow" id="weizuozhefasongganxie">已喜欢</a>
          <% else %>
            <a href="javascript:void(0)" class="like grey" data-method="post" data-remote="true" rel="nofollow" id="weizuozhefasongganxie">我喜欢</a>
          <% end %>
        <% else %>
            <a href="javascript:void(0)" class="like grey">收到的喜欢</a>
        <% end %>
          <a href="#fans" class="likes"><span id="weizuozhefasongganxie2"><%= @courseware.thanked_count %></span> 喜欢</a>
        </li>

      </ul>
    </div>
    
    <div class="extras" style="float:right;margin-right:18px;margin-right:40px">
      <ul class="delimited" style="margin-bottom:0;border-top:none">
        <li class="category" style="border-top:none">领域 <a href="/topics/<%= @courseware.topic_id %>"><%= @courseware.topic %></a></li>
      </ul>
    </div>
    <div style="width:51%;float:left" class="extras">
      <h1><%=image_tag('zuozhe.png',alt:'课件原作者',style:'margin-top:16px;margin-bottom:4px')%></h1>
      <% style='width:50%;float:left' %>
      <%= render :partial => 'presenter', :locals => {user:@courseware.user, :style=>style} %>
    </div>
    <div style="width:49%;float:right;margin-top:-8px">
      <h6><%=image_tag('peixun2.png',alt:'相关线下培训')%></h6>
      <div class="ad" id="doc_ad0" style="height:100px">
        <p>
          <a id="doc_ad" target="_blank" href="http://vip.kuakao.com/mg/" style="background-image:url(<%= asset_path 'ad2.png' %>)"></a>
          <% content_for :butt2 do %>
            $('#doc_ad').mouseenter(function(){
              $('#doc_ad0').animate({height:$('#doc_ad0').height()+(187-80)},200);
              $(this).animate({height:187},200);
            }).mouseleave(function(){
              $('#doc_ad0').animate({height:100},200);
              $(this).animate({height:80},200);
            });
          <% end %>
        </p>
        <p>
          <a href="http://vip.kuakao.com/mg/" target="_blank">
跨考教育提供全日制住宿式2013年考研魔鬼训练营(国内首家).
          </a>
        </p>
      </div>
    </div>
    
    <% else %>
    <div class="main">
        <div class="slide_frame" id="slides_container">

