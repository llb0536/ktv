#!/bin/bash -x

pg_dump --username=super ktv > /home/data/de_dump.sql
rm -rf /home/data/ktvmongodump
rm -f  /home/data/ktvmongodump.tar.gz
/usr/local/bin/mongodump --db ktv -o /home/data/ktvmongodump
tar czf /home/data/ktvmongodump.tar.gz /home/data/ktvmongodump
chmod 777 /home/data/ktvmongodump.tar.gz
