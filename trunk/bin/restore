#!/bin/bash -x

read -r -p "Are you sure? [y/N] " response
case $response in
    [yY][eE][sS]|[yY]) 
        cd ~
        scp data@kejian.tv:/home/data/ktvmongodump.tar.gz ~
        rm -rf home/data/ktvmongodump/
        tar xzf ktvmongodump.tar.gz
        mongorestore --drop home/data/ktvmongodump/
        ;;
    *)
        ;;
esac



